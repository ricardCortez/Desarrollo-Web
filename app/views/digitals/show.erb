<div class="content-body">
    <div class="container-fluid mt-3">
        <i class="icon-notebook menu-icon btn-lg"></i><span class="h3">  Consultar Registros</span>
        <p>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table header-border table-hover verticle-middle">
                                <thead>
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Número de Lote</th>
                                        <th scope="col">Documento</th>
                                        <th scope="col">Número de Páginas</th>
                                        <th scope="col">Usuario</th>
                                        <th scope="col">Opción</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @digitals.each do |digital| %>
                                        <tr>
                                            <th><%= digital.id %></th>
                                            <td><%= digital.nro_lote %></td>
                                            <td><a href="<%= digital.imglote_url %>" target="_blank" class="text-primary"><%= digital.documento %></a></td>
                                            <td><%= digital.nro_pages %></td>
                                            <td><%= digital.user_name %></td>
                                            <td>
                                                <a href=<%= digital.id %>/edit data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit">
                                                    <i class="fa fa-pencil color-muted m-r-5"></i>
                                                </a>
                                                &nbsp;&nbsp;&nbsp;&nbsp;
                                                <a href=<%= digital.id %>/delete data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete">
                                                    <i class="fa fa-close color-danger m-r-5"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>