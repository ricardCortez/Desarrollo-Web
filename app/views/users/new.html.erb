<div class="content-body">
    <div class="container-fluid mt-3">
		<i class="icon-note menu-icon btn-lg"></i><span class="h3"> Registrar Usuario</span>
		<p>
        <div class="row">
			<div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="basic-form">
                            <%= form_for :user, :url => { :action => :create } do |user| %>
                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <label>Nombre</label>
                                        <input type="text" name="user[nombre]" class="form-control" required="">
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label>Apellido Paterno</label>
                                        <input type="text" name="user[apellido_paterno]" class="form-control" required="">
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label>Apellido Materno</label>
                                        <input type="text" name="user[apellido_materno]" class="form-control" required="">
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <label>Correo Electronico</label>
                                        <input type="email" name="user[correo]" class="form-control" required="">
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label>Permiso</label>
                                        <select name="user[nivel]" id="inputState" class="form-control">
                                            <option></option>
                                            <% @permisos.each do |p| %>
                                                <option><%= p.descripcion %></option>
                                            <% end %>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label>Estado</label>
                                        <input type="text" name="user[estado]" class="form-control">
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <label>Empresa</label>
                                        <input type="text" name="user[empresa_id]" class="form-control">
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label>Clave</label>
                                        <input type="password" name="user[clave]" class="form-control">
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label>Seleccionar Foto</label>
                                        <%= user.file_field :imglote, class:"form-control-file", accept:"image/png, image/jpeg" %>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-success btn-lg" id="toastr-success-top-right">Grabar</button>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>