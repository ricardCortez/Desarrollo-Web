<div class="content-body">
    <div class="container-fluid mt-3">
        <h4 class="card-title"></h4>
        <div class="row">
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-3">
                    <div class="card-body">
                        <h3 class="card-title text-white">Documentos Digitalizados</h3>
                        <div class="d-inline-block">
                            <h2 class="text-white"><%= @digital.length %></h2>
                            <p class="text-white mb-0">Actualmente 0 pendientes</p>
                        </div>
                        <span class="float-right display-5 opacity-5"><i class="fa fa-folder"></i></span>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-3">
                    <div class="card-body">
                        <h3 class="card-title text-white">Documentos Indizados</h3>
                        <div class="d-inline-block">
                            <h2 class="text-white"><%= @indizacion.length %></h2>
                            <p class="text-white mb-0">Actualmente <%= @indizacion_pending %> pendientes</p>
                        </div>
                        <span class="float-right display-5 opacity-5"><i class="fa fa-file"></i></span>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-3">
                    <div class="card-body">
                        <h3 class="card-title text-white">Documentos Verificados</h3>
                        <div class="d-inline-block">
                            <h2 class="text-white"><%= @review.length %></h2>
                            <p class="text-white mb-0">Actualmente <%= @review_pending %> pendientes</p>
                        </div>
                        <span class="float-right display-5 opacity-5"><i class="fa fa-check"></i></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-3">
                <div class="card">
                    <div class="card-body">
                        <div class="text-center">
                            <span class="display-5"><i class="icon-list gradient-3-text"></i></span>
                            <h2 class="mt-3"><%= @accept.length %> / <%= @digital.length %></h2>
                            <p> </p><a href="javascript:void()" class="btn gradient-1 btn-lg border-0 btn-rounded px-5">Documentos Aceptados</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-3">
                <div class="card">
                    <div class="card-body">
                        <div class="text-center">
                            <span class="display-5"><i class="icon-list gradient-1-text"></i></span>
                            <h2 class="mt-3"><%= @rejected.length %> / <%= @digital.length %></h2>
                            <p> </p><a href="javascript:void()" class="btn gradient-3 btn-lg border-0 btn-rounded px-5">Documentos Denegados</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- #/ container -->
</div>